<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgFood"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvFood"
            app:layout_constraintStart_toEndOf="@+id/imgFood" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:textStyle="bold"/>
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvFood"
            app:layout_constraintBottom_toBottomOf="@+id/imgFood"
            app:layout_constraintStart_toEndOf="@+id/imgFood" android:layout_marginStart="16dp"
            android:textColor="#F44336"/>
</androidx.constraintlayout.widget.ConstraintLayout>